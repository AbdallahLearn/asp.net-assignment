@model TechJobPortal.Models.JobListing
@using TechJobPortal.Models

@{
    ViewData["Title"] = "Job Details";
}

<div class="container d-flex justify-content-center align-items-center min-vh-100">
    <div class="card shadow-lg p-4 w-100" style="max-width: 800px;">
        <div class="row g-4 align-items-center">
            <!-- Image Section -->
            <div class="col-md-4 d-flex justify-content-center">
                <img src="https://encrypted-tbn0.gstatic.com/images?q=tbn:ANd9GcRiCKjwk4iXDZN_OEXKm9on0fSUWVdBhjfuPA&s"
                     class="img-fluid rounded-circle border border-secondary"
                     alt="Company Logo"
                     style="width: 150px; height: 150px; object-fit: cover;">
            </div>

            <!-- Job Details Section -->
            <div class="col-md-8">
                <h2 class="text-primary">@Model.Title</h2>
                <p><strong>Company:</strong> @Model.CompanyName</p>
                <p><strong>Location:</strong> @Model.Location</p>
                <p><strong>Job Type:</strong> @Model.JobType</p>
                <p><strong>Posted on:</strong> @Model.PostedDate.ToString("MMM dd, yyyy")</p>
                <a asp-action="Index" class="btn btn-secondary mt-3">Back to Listings</a>
            </div>
        </div>
    </div>
</div>
